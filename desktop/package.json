  "version": "1.0.0",
  "description": "Akın Kombi Servis Yönetim Sistemi - Windows Desktop",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder"
  },
  "author": "Akın Kombi",
